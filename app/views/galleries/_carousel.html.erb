<div id="myCarousel" class="carousel slide carousel_display" data-ride="carousel">

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% i = 0 %>
    <% while i < @pictures_featured.length do %>
      <% if i == 0 %>
        <li data-target="#myCarousel" data-slide-to="<%= i %>" class="active"></li>
      <% else %>
        <li data-target="#myCarousel" data-slide-to="<%= i %>"></li>
      <% end %>
      <% i += 1%>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% @pictures_featured.each do |picture| %>

      <% if picture.id == @pictures_featured.first.id %>
        <div class="item active">
      <% else %>
          <div class="item">
      <% end %>
         <a href="<%= picture_path(picture) %>" >
          <div class="carousel_display_img">
            <%= image_tag picture.image.url(:original) %>
          </div>
        </a>
      </div>

    <% end %>
  </div>

  <div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <!-- <span class="sr-only">Previous</span> -->
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <!-- <span class="sr-only">Next</span> -->
    </a>
  </div>

</div>
