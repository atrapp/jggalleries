<div id="blog-block" class="information" name="blog">
  <h3>Blog</h3>
  <p>
    <h1 class="blog_header">Jonathan's Blog</h1>

    <% @posts.each do |post|%>

      <div class="post-entry">
        <h2><%=link_to post.title, post_path(post.id) %></h2>
        <p><%=post.created_at.strftime("%B %d, %Y")%></p>

        <div class="post-body">
          <%if post==@posts.first%>
            <%post.body.html_safe%>
          <%end%>
        </div>
      </div>
      <hr>
    <%end%>
    <%= link_to 'New Post', new_post_path %>
  </p>
</div>

<div id="contact-block" class="information" name="contact">
  <h3>Contact</h3>

  <div class="row-fluid">

    <div id="contact-form" class="span6">
      <div class="form-group">
        <%= label_tag 'name', 'Name' %>
        <%= text_field_tag 'name', nil, class: 'form-control contact-field' %>
      </div>
      <div class="form-group">
        <%= label_tag 'email', 'Email' %>
        <%= email_field_tag 'email', nil, class: 'form-control contact-field' %>
      </div>
      <div class="form-group">
        <%= label_tag 'comments', 'Comments' %>
        <%= text_area_tag 'comments', nil, class: 'form-control contact-field', rows: 10 %>
      </div>
      <div class="form-button">
        <%= submit_tag nil, class: 'btn btn-default btn-about' %>
      </div>
    </div>

    <div class="span6">
      <div id="video" class="pull-right">
        <iframe width="500" height="300" src="http://www.youtube.com/embed/rmyzOU6ftHE?feature=player_detailpage" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>

  </div>
</div>

