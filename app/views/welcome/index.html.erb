<div id="blog-block" class="information" name="blog">
  <h3>Blog</h3>
  <p>
    <h1 class="blog_header">Jonathan's Blog</h1>

    <% @posts.each do |post|%>

      <div class="post-entry">
        <h2><%=link_to post.title, post_path(post.id) %></h2>
        <p><%=post.created_at.strftime("%B %d, %Y")%></p>

        <div class="post-body">
          <%if post==@posts.first%>
            <%post.body.html_safe%>
          <%end%>
        </div>
      </div>
      <hr>
    <%end%>

    <%= link_to 'New Post', new_post_path %>
  </p>
</div>

