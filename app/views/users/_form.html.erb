<%= form_for @user do |form| %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
        
  <div class="field">
    <%= form.label :avatar %>
    <% if @user.avatar != nil %>    
      <div class="avatar_thumb">
        <%= image_tag @user.avatar.url(:thumb) %>
      </div>
    <% end %>
  <%= form.file_field :avatar %>     
  </div>

  <div class="actions"><%= form.submit %></div>

<% end %>