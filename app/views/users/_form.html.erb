<%= form_for @user, :url => users_path, :html => { :multipart => true } do |form| %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>
  <div class="actions"><%= form.submit %></div>
<% end %>