<div class="large-space"></div>

<h1 class="page-header">Picture details</h1>

<div class="picture_browsing">
  <span><%= link_to 'Previous', @picture.previous %></span>
  <span><%= link_to 'Next', @picture.next %></span>
</div>

<div class="container">

  <div class="row-fluid picture_display">

    <div class="span6 picture_display_image">
      <a href="<%= @picture.image.url(:original) %>" class="fancybox">
          <%= image_tag @picture.image.url(:original) %>
      </a>
    </div>

    <div class="span6 picture_display_text">
      <div>
        <span>Item ID:</span>
        <%= @picture.item_id %>
      </div>
      <div class="picture_display_title">
        <%= @picture.title %>
      </div>
      <div>
        <%= @picture.caption %>
      </div>
      <div>
        <span><%= "Gallery".pluralize(@picture.galleries.count) %>:</span>
        <%= @picture.galleries.order("name ASC").map {|g| g.name}.join(', ') %>
      </div>
      <div>
        <span>Creation Date:</span>
        <%= @picture.creation_date %>
      </div>
      <div>
        <span>Size:</span>
        <%= @picture.size %>
      </div>
      <div>
        <span>Price:</span>
        <%= number_to_currency(@picture.price) %>
      </div>
      <div>
        <% if @picture.status != "none" %>
          <span>Status:</span>
          <%= @picture.status %>
        <% end %>
      </div>
    </div>

  </div>

</div>

<hr>
<div class="my-buttons">
  <%= link_to 'Back', '#', class: 'back_link my-button' %>
</div>
