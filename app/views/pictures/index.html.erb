<div class="large-space"></div>

<h1 class="page-header">All pictures</h1>

<div class="container">

  <%= link_to 'New picture', new_picture_path, class: "btn pull-left" %>

  <div class="clear"></div>

  <% @pictures.each do |picture| %>

    <div class="image_pic pull-left">

      <a href="<%= picture.image.url(:original) %>" class="fancybox">
        <%= image_tag picture.image.url(:medium) %>
      </a>

      <div class="image_desc">
        <p><%= picture.item_id %></p>
        <p><%= picture.title %></p>
        <p><%= picture.caption %></p>
        <p><%= picture.creation_date %></p>
      </div>

      <div class="image_links">
        <%= link_to 'Show', picture %>
        <%= link_to 'Edit', edit_picture_path(picture) %>
        <%= link_to 'Delete', picture, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>

    </div>

  <% end %>

</div>
