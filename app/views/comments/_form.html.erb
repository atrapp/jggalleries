<%= tinymce_assets %>

<%= form_for([@post, @comment]) do |f| %>
  <% if @comment.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@comment.errors.count, "error") %> meant that this comment could not be saved. Hang in there! :</h2>

    <ul>
      <% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label "leave your comment for \"" + @post.title = "\" here:" %><br>
    <%= f.text_area :body, :class => "tinymce", :rows => 10, :cols => 100 %>
    <%= tinymce %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



