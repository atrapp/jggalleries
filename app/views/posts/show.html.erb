<div class="large-space"></div>

<div class="post-entry">

  <h2 class="post-entry-header"><%= @post.title %></h2>
  <p><%= @post.created_at.strftime("%B %d, %Y") %></p>

  <div class="post-body">
    <%= @post.body.html_safe %>
  </div>

</div>

<hr>

<% if current_user && current_user.is_admin? %>
  <div class="post-buttons">
    <%= link_to 'Back', '#', class: 'back_link post-button' %>
    <%= link_to 'Edit', edit_post_path(@post), class: 'post-button' %>
    <%= link_to 'All posts', posts_path, class: 'post-button' %>
  </div>
<% else %>
  <div class="post-buttons">
    <%= link_to 'Back', '#', class: 'back_link post-button' %>
  </div>
<% end %>
