<div id="signupModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" aria-hidden="true"><a href="/">&times;</a></button>
        <h4 class="modal-title">Sign up</h4>
      </div>

      <div class="modal-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <%= f.label "First Name*" %>
          <%= f.text_field :first_name, class: 'user-field' %>

          <%= f.label "Last Name*" %>
          <%= f.text_field :last_name, class: 'user-field' %>

          <%= f.label "Username*" %>
          <%= f.text_field :username, class: 'user-field' %>

          <%= f.label "Email*" %>
          <%= f.email_field :email, autofocus: true, class: 'user-field' %>

          <%= f.label "Password*" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'user-field' %>

          <%= f.label "Password confirmation*" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'user-field' %>

          <div class="shared-links">
            <%= render "devise/shared/links" %>
          </div>

        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Sign up</button>
          <button type="button" class="btn btn-default"><a href="/">Close</a></button>
        </div>

      <% end %>

    </div>
  </div>
</div>
