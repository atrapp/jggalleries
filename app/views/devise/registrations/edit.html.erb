<div id="editProfileModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><a href="/">&times;</a></button>
        <h4 class="modal-title">Edit Profile</h4>
      </div>

      <div class="modal-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.label "First Name" %>
          <%= f.text_field :first_name, class: 'user-field' %>

          <%= f.label "Last Name" %>
          <%= f.text_field :last_name, class: 'user-field' %>

          <%= f.label :username %>
          <%= f.text_field :username, class: 'user-field' %>

          <!-- Email address cannot be changed once it is confirmed
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'user-field' %>
          </div>
          -->
          <%= f.label :email %>
          <%= f.text_field :email, class: ["user-field","protected"], :readonly => true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <br />
          <div id="password_section">
            <%= f.label "New password" %>
            <%= f.password_field :password, class: "user-field", autocomplete: "off" %>

            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "user-field", autocomplete: "off" %>
          </div>

          <%= f.button "Change password", id: 'change_password_button', class: 'btn btn-default' %>

          <!-- No password needed to update profile
          <div class="field">
            <%= f.label :current_password %> <i>(to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: 'user-field' %>
          </div>
          -->

          <!--
          <h3>Cancel my account</h3>

          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
          -->

          <!--
          <div class="shared-links">
            <%= link_to "Back", :back %>
          </div>
          -->

        </div> <!-- modal-body -->

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Update</button>
          <button type="button" class="btn btn-default"><a href="/">Close</a></button>
        </div>

      <% end %>

    </div>
  </div>
</div>
